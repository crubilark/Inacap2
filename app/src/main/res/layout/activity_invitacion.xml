<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.clrubilarc.inacap2.InvitacionActivity">

    <include layout="@layout/mibarra"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/cumple"
        android:layout_below="@+id/mibarra"/>

    <TextView
        android:layout_below="@+id/mibarra"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Feliz Cumpleaños Darío"
        android:textSize="30dp"
        android:padding="8dp"
        android:textColor="@android:color/white"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23 de Julio 2018"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="25dp"

        />

</RelativeLayout>
